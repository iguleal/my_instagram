<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="32dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:layout_marginBottom="32dp"
                android:src="@drawable/photo_icon" />

            <TextView
                style="@style/Theme.MyInstagram.TextViewBase.Form"
                android:text="@string/photo_register_title"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"/>

            <TextView
                style="@style/Theme.MyInstagram.TextViewBase.Form"
                android:text="@string/photo_register_subtitle"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black" />


            <com.example.myinstagram.login.view.LoadingButton
                android:id="@+id/btn_next_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/next" />

            <Button
                android:id="@+id/btn_register_jump"
                style="@style/Theme.MyInstagram.Link"
                android:text="@string/jump" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

